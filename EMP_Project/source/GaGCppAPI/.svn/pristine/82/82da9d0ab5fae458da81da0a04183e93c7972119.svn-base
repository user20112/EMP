#include "common/GaLogger.h"

namespace GaGCppAPI {

    // **************************************************************************************************
    // ** GaLogger
    // **************************************************************************************************
    GaLogger::GaLogger(gc_LogSeverity _level)
    {
        mBuffer.str() = "";
        mLevel = _level;
    }

    // **************************************************************************************************
    // ** ~GaLogger
    // **************************************************************************************************
    GaLogger::~GaLogger()
    {
    }

    // **************************************************************************************************
    // ** operator<<
    // **************************************************************************************************
    GaLogger&
    GaLogger::operator<<(GaLogger::GaLoggerManipulator _manip)
    {
        return (_manip(*this));
    }

    // **************************************************************************************************
    // ** endl
    // **************************************************************************************************
    GaLogger&
    GaLogger::endl(GaLogger& _ins)
    {
        gc_logMessage(_ins.mLevel, _ins.mBuffer.str().c_str());
        _ins.mBuffer.str("");

        return (_ins);
    }


} /* namespace GaGCppAPI */
